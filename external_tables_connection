##crear dataset

bq mk --dataset --location=us my_gcs_metadata_dataset

##crear una conexion BQ API connection debe estar habilitada

bq mk --connection --location=us \
    --connection_type=CLOUD_RESOURCE \
    --project_id=my-ml-project-12345 \
    gcs_metadata_conn

## obtener el SA de BQ
SERVICE_ACCOUNT_ID=$(bq show --format json --connection us.my_gcs_conn | jq -r .cloudResource.serviceAccountId)
echo "Service Account ID: $SERVICE_ACCOUNT_ID"


## Create the Object Table in BigQuery:

bq mk --table \
    --external_table_definition=gs://percha-annotated-images_full_download/*@us-central1.my_gcs_conn \
    --object_metadata=SIMPLE \
    dataset_metadata.set3_metadata

##GRANT PERMISSIONS

gcloud storage buckets add-iam-policy-binding gs://percha-annotated-images_full_download \
    --member="serviceAccount:$SERVICE_ACCOUNT_ID" \
    --role="roles/storage.objectViewer"
